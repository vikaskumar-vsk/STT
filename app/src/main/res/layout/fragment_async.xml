<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="labs.ika.speechtotext.AsyncFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myText"
        android:onClick="onTextClick"
        android:textSize="18sp"
        android:textColor="@color/primary_text_material_light"
        android:textAlignment="center"
        android:text="Welcome! Press MIC to start recording!"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageRecBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:hapticFeedbackEnabled="true"
        android:onClick="onBtnClick"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_mic_white_24dp" />

</RelativeLayout>
